{
  "name": "fe1-electron-tool",
  "version": "1.0.0",
  "description": "FE팀을 위한 Electron 도구",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc -w\" \"wait-on dist/main.js && electron . --inspect=5858\"",
    "dev:reload": "concurrently \"tsc -w\" \"wait-on dist/main.js && electron . --inspect=5858\" \"electron-reload .\"",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts renderer/**/*.js",
    "format:check": "prettier --check src/**/*.ts renderer/**/*.js",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "package": "npm run build && electron-packager . FE팀-Jira동기화도구 --platform=darwin --arch=x64 --out=release --overwrite",
    "package:dated": "npm run build && node scripts/package-with-date.js",
    "package:mac-universal": "npm run build && electron-packager . FE팀-Jira동기화도구 --platform=darwin --arch=x64,arm64 --out=release --overwrite",
    "build:mac-stable": "npm run build && electron-builder --mac --publish=never",
    "build:mac-arm64": "npm run build && electron-builder --mac --arm64 --publish=never",
    "build:mac-universal": "npm run build && electron-builder --mac --universal --publish=never",
    "package:win": "npm run build && electron-packager . FE팀-Jira동기화도구 --platform=win32 --arch=x64 --out=release --overwrite",
    "package:linux": "npm run build && electron-packager . FE팀-Jira동기화도구 --platform=linux --arch=x64 --out=release --overwrite"
  },
  "keywords": [
    "electron",
    "typescript",
    "tool"
  ],
  "author": "FE Team",
  "license": "MIT",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2"
  },
  "build": {
    "appId": "com.feteam.jira-sync-tool",
    "productName": "FE팀 Jira 동기화 도구",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "node_modules/**/*",
      ".env"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "이 앱은 외부 브라우저를 열기 위해 Apple Events를 사용합니다.",
        "NSNetworkVolumesUsageDescription": "이 앱은 Jira API 연결을 위해 네트워크 접근이 필요합니다."
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
